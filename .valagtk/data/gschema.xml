<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema path="{APPLICATION_SCHEMA_PATH}" id="{APPLICATION_ID}">
    <key name="pos-x" type="i">
      <default>360</default>
      <summary>Horizontal position</summary>
      <description>The saved horizontal position of the main window</description>
    </key>

    <key name="pos-y" type="i">
      <default>360</default>
      <summary>Vertical position</summary>
      <description>The saved vertical position of the main window</description>
    </key>

    <key name="window-width" type="i">
      <default>900</default>
      <summary>Window width</summary>
      <description>The saved main window width</description>
    </key>

    <key name="window-height" type="i">
      <default>900</default>
      <summary>Window height</summary>
      <description>The saved main window height</description>
    </key>
  </schema>
</schemalist>
